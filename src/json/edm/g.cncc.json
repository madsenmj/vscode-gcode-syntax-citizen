    "codes": {
        "G00": {
            "category": "motion",
            "shortDesc": "Rapid Motion Positioning",
            "desc": "G00 is used for positioning. It moves teh table and laser head to the designated X, Y axis location at the current traverse speed",
            "modal": true,
            "parameters": {
                "X": {
                    "shortDesc": "X-Axis motion command",
